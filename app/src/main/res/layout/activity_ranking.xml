<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Controller.RankingActivity">

    <TextView
        android:id="@+id/activity_ranking_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp"
        android:text="RANKING"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/activity_ranking_player1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="p1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/activity_ranking_rank"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/activity_ranking_player2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="p2"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/activity_ranking_player1"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/activity_ranking_player3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="p3"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/activity_ranking_player2"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/activity_ranking_player4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="p4"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/activity_ranking_player3"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/activity_ranking_player5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="p5"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_ranking_player4"
        app:layout_constraintVertical_bias="0.05"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/activity_ranking_btnRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="148dp"
        android:layout_marginBottom="8dp"
        android:text="ranking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_ranking_player5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/activity_ranking_btnAlpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="8dp"
        android:text="ranking alpha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_ranking_player5"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>